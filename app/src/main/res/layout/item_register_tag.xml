<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_tag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="11"
        android:textStyle="bold"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_tag_divider"
        android:layout_width="2dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/item_tag_title"
        app:layout_constraintBottom_toBottomOf="@id/item_tag_title"
        android:background="@color/register_gray"
        app:layout_constraintLeft_toRightOf="@id/item_tag_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="7dp"
        android:layout_marginVertical="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
